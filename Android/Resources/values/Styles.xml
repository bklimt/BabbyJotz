<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="BabbyTextView" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="BabbyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
    </style>
    <style name="BabbyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textViewStyle">@style/BabbyTextView</item>
        <item name="android:actionBarStyle">@style/BabbyActionBar</item>
        <item name="android:actionBarTabStyle">@android:style/Widget.Holo.Light.ActionBar.TabView.Inverse</item>
        <item name="android:actionBarTabBarStyle">@android:style/Widget.Holo.Light.ActionBar.TabBar.Inverse</item>
        <item name="android:actionBarTabTextStyle">@android:style/Widget.Holo.Light.ActionBar.TabText.Inverse</item>
    </style>

    <style name="Theme.Splash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>