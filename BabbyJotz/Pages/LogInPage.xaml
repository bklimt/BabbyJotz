<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns ="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BabbyJotz.LogInPage"
    BackgroundColor="{Binding Theme.Background}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="8">
                <StackLayout.Padding>
                    <Thickness Top="20" Bottom="20" Left="20" Right="20" />
                </StackLayout.Padding>
                <Label
                    Text="Email:"
                    TextColor="{Binding Theme.Text}" />
                <Entry
                    x:Name="username"
                    BackgroundColor="White"
                    HorizontalOptions="FillAndExpand" />
                <Label
                    Text="Password:"
                    TextColor="{Binding Theme.Text}" />
                <Entry
                    x:Name="password"
                    IsPassword="true"
                    BackgroundColor="White"
                    HorizontalOptions="FillAndExpand" />
                <StackLayout Orientation="Horizontal">
                    <Button
                        Text="Sign Up"
                        Clicked="OnSignUpClicked"
                        TextColor="{Binding Theme.ButtonText}"
                        HorizontalOptions="FillAndExpand" />
                    <Button
                        Text="Log In"
                        Clicked="OnLogInClicked"
                        TextColor="{Binding Theme.ButtonText}"
                        HorizontalOptions="FillAndExpand" />
                </StackLayout>
                <Button
                    Text="View Privacy Policy"
                    Clicked="OnViewPrivacyPolicyClicked"
                    TextColor="{Binding Theme.ButtonText}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
