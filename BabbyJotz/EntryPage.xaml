<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:BabbyJotz;assembly=BabbyJotz"
	x:Class="BabbyJotz.EntryPage"
    IsBusy="{Binding RootViewModel.Syncing}"
	Title="Edit Entry">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:NumberConverter x:Key="numberConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
	<ScrollView
		HorizontalOptions="FillAndExpand"
		VerticalOptions="FillAndExpand">
		<StackLayout Spacing="8" BackgroundColor="{Binding RootViewModel.Theme.Background}">
		<StackLayout.Padding>
			<Thickness Top="20" Bottom="20" Left="20" Right="20" />
		</StackLayout.Padding>
			<StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="FillAndExpand">
				<Label
                    Text="Date"
                    TextColor="{Binding RootViewModel.Theme.Text}" />
				<DatePicker
                    BindingContext="{Binding LogEntry}"
					Date="{Binding Date}"
                    BackgroundColor="White"
					WidthRequest="150"
					HorizontalOptions="EndAndExpand" />
			</StackLayout>
			<StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="FillAndExpand">
				<Label
                    Text="Time"
                    TextColor="{Binding RootViewModel.Theme.Text}" />
				<TimePicker
                    BindingContext="{Binding LogEntry}"
                    Time="{Binding Time}"
                    BackgroundColor="White"
                    WidthRequest="150"
                    HorizontalOptions="EndAndExpand" />
			</StackLayout>
			<Label
                Text="Notes"
                TextColor="{Binding RootViewModel.Theme.Text}" />
			<Editor
                BindingContext="{Binding LogEntry}"
				Text="{Binding Text}"
                BackgroundColor="White"
				Focused="OnNotesFocused"
				HeightRequest="100"
				HorizontalOptions="FillAndExpand" />
			<StackLayout Orientation="Horizontal" Spacing="8">
				<Label
                    Text="💤 Asleep?"
                    TextColor="{Binding RootViewModel.Theme.Text}"
                    HorizontalOptions="FillAndExpand" />
				<Switch IsToggled="{Binding LogEntry.IsAsleep}" />
			</StackLayout>
			<StackLayout Orientation="Horizontal" Spacing="8">
				<Label
                    Text="💩 Poop?"
                    TextColor="{Binding RootViewModel.Theme.Text}"
                    HorizontalOptions="FillAndExpand" />
				<Switch IsToggled="{Binding LogEntry.IsPoop}" />
			</StackLayout>
			<StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="FillAndExpand">
                <Label
                    Text="🍼 Formula"
                    TextColor="{Binding RootViewModel.Theme.Text}" />
                <Entry
                    BindingContext="{Binding LogEntry}"
                    Text="{Binding FormulaEaten, Converter={StaticResource numberConverter}}"
                    BackgroundColor="White"
                    Keyboard="Numeric"
                    WidthRequest="75"
                    HorizontalOptions="EndAndExpand" />
				<Label
                    Text="oz"
                    TextColor="{Binding RootViewModel.Theme.Text}"
                    VerticalOptions="Center"
                    HorizontalOptions="End" />
			</StackLayout>
			<StackLayout Orientation="Horizontal" Spacing="8">
				<Button
                    Text="Delete"
                    Clicked="OnDeleteClicked"
                    TextColor="{Binding RootViewModel.Theme.ButtonText}"
                    HorizontalOptions="FillAndExpand" />
				<Button
                    Text="Save"
                    Clicked="OnSaveClicked"
                    TextColor="{Binding RootViewModel.Theme.ButtonText}"
                    HorizontalOptions="FillAndExpand" />
			</StackLayout>
		</StackLayout>
	</ScrollView>
</ContentPage>